<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sv_details_container">
    <LinearLayout
        android:id="@+id/ll_movie_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height_200"
            android:layout_marginTop="@dimen/mergin_10"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_movie_poster"
                android:layout_width="@dimen/layout_width_120"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/mergin_30"
                android:layout_marginEnd="@dimen/mergin_30"
                app:srcCompat="@drawable/poster"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mergin_20"
                android:layout_marginEnd="@dimen/mergin_20"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_release_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_30"
                    android:layout_marginTop="@dimen/mergin_10"
                    tools:text="2015"/>
                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_25"
                    android:textStyle="italic"
                    tools:text="12min"/>
                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mergin_10"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_15"
                    tools:text="8/10"
                    />
                <Button
                    android:layout_width="@dimen/layout_width_120"
                    android:layout_height="wrap_content"
                    android:text="@string/mark_as_favourite"
                    android:textSize="@dimen/text_size_15"
                    android:background="@color/colorViridian"
                    android:textColor="@color/colorCapeCod"
                    android:layout_marginTop="@dimen/mergin_10"
                    android:padding="@dimen/pading_10"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mergin_20"
            android:textSize="@dimen/text_size_20"
            android:layout_marginStart="@dimen/mergin_10"
            android:layout_marginEnd="@dimen/mergin_10"
            tools:text="Movie details"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>