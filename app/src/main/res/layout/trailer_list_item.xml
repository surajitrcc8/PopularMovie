<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/trailer_list_item_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_play_trailer"
            android:layout_width="@dimen/layout_height_50"
            android:layout_height="@dimen/layout_height_50"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/mergin_20"
            android:layout_marginStart="@dimen/mergin_20"
            app:srcCompat="@drawable/ic_play_circle_24dp" />

        <TextView
            android:id="@+id/tv_trailer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_20"
            tools:text="Trailer 1" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_1"
        android:background="@android:color/darker_gray"
        ></View>
</LinearLayout>